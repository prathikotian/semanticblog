<%- include('partials/header') %>
  <div class="ui container raised segment">
    <div class="ui divided items">
      <% blogs.forEach(blog => { %>
        <div class="item">
          <div class="image">
            <img class="ui rounded image" src="<%= blog.image %>" alt="<%= blog.title %>">
          </div>
          <div class="content">
            <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
            <div class="meta">
              <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
              <p><%- blog.body.substring(0, 200) %>....</p>
            </div>
            <div class="extra">
              <a class="ui right floated basic violet button" href="/blogs/<%= blog._id %>">
                Read More
                <i class="right chevron icon"></i>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
<%- include('partials/footer') %>
