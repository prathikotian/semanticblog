<%- include('partials/header') %>
<div class="ui container raised segment">
  <h1 class="ui huge header">Edit <%= blog.title %></h1>
  <form class="ui form" action="/blogs/<%= blog._id %>/?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" value="<%= blog.title %>" required>
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" value="<%= blog.image %>">
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea name="blog[body]" rows="8" cols="80" required><%= blog.body %></textarea>
    </div>
    <input class="ui inverted violet large button" type="submit" value="Update Post">
  </form>
</div>
<%- include('partials/footer') %>
